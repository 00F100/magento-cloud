#                                                   #
#                 SYSTEM VALIDATION                 #
#                                                   #
#####################################################
source /usr/local/bin/mcp/docker-env-check;

#####################################################
#                                                   #
#                  INPUTS CONFIGS                   #
#                                                   #
#####################################################
source /usr/local/bin/mcp/inputs

#####################################################
#                                                   #
#                   CLONING CLOUD                   #
#                                                   #
#####################################################
source /usr/local/bin/mcp/clone

#####################################################
#                                                   #
#                     BUILDING                      #
#                                                   #
#####################################################
source /usr/local/bin/mcp/build

#####################################################
#                                                   #
#                     DEPLOYING                     #
#                                                   #
#####################################################
source /usr/local/bin/mcp/deploy